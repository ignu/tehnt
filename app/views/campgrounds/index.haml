.title
  %h1 Camp Properties

#campgrounds
- @campgrounds.each do |campground|
  %h2= campground.name
  %span.description= campground.description
  .container
    %button.reservation{:campground_id=>campground.id, :campground_name=>campground.name} Reserve this Campground!
    -if admin?
      =render :partial => 'shared/crud', :locals => { :path => "/campgrounds/#{campground.id}" }
  

#reservation_dates

  %table  
    %tr
      %td
        Check in Date:
        .field
          %input.date{:type=>'text', :name=>'startDate', :id=>'startDate'}
      %td
        #endDateDiv
          End Date:
          .field
            %input.date{:type=>'text', :name=>'endDate', :id=>'endDate'}

                                                                           
-if admin?
  %p
    #add_campground
    %h3 Add new Campground
    -form_for Campground.new do |f|
      %p
        =f.label :name
        =f.text_field :name
      %p
        =f.label :description
        =f.text_area :description
